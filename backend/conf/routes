# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
GET         /api/record/:id        @com.leafchild0.adr.controllers.RecordController.getRecordById(id: Long)

GET         /api/records           @com.leafchild0.adr.controllers.RecordController.getAllRecords()

POST        /api/record            @com.leafchild0.adr.controllers.RecordController.addRecord(dto: AdrRecordDTO)

PUT         /api/record/:id        @com.leafchild0.adr.controllers.RecordController.updateRecord(id: Long, dto: AdrRecordDTO)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
